<section class="content">
  <div class="row">
    <section class="content">
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title">Send Message</h3>
        </div>
        <div class="box-body">
          <%= form_for(@message, validate: true) do |f| %>
            <% if @message.errors.any? %>
              <% @message.errors.full_messages.each do |message| %>
                <span class="help-block"><%= message %></span>
              <% end %>
            <% end %>
            <div class="form-group">
              <%= f.label 'to*' %>
              <%= f.select(:reciever_id, @users, {include_blank: 'Please choose' },  { class: 'form-control expense' })%>

              <%= f.validate %>
            </div>
            <div class="form-group">
              <%= f.label 'title*' %>
              <%= f.text_field :title, class: 'form-control', placeholder: 'Title ...', required: true %>
              <%= f.validate %>
            </div>
            <div class="form-group">
              <%= f.label 'content*' %>
              <%= f.cktext_area :content, autocomplete: "off",:ckeditor => {:toolbar => 'mini'}, required: true ,'data-parsley-required-message'=>"Please enter a message" %>
              <%= f.validate %>
            </div>
            <div class="form-group">
              <%= f.submit 'Send', class: 'btn btn-primary float-right' %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</section>